root = true
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.rs]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[*.mjs]
indent_style = space
indent_size = 2

[*.mdx]
indent_style = space
indent_size = 2

[*.tsx]
indent_style = space
indent_size = 2

[*.astro]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tabs
indent_size = 4
