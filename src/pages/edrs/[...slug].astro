---
import { getCollection, render } from 'astro:content';
import {
  ArrowLeft,
  ClockFading,
  ExternalLink,
  Info,
  Terminal,
} from 'lucide-react';

import { Meteors } from '@/components/magicui/meteors';
import { Alert, AlertDescription } from '@/components/ui/alert';
import { SITE_METADATA } from '@/consts';
import DefaultLayout from '@/layouts/DefaultLayout.astro';

export async function getStaticPaths() {
  const edrs = await getCollection('edrs');
  return edrs.map((edr) => ({
    params: { slug: edr.id },
    props: edr,
  }));
}

const edr = Astro.props;
const { Content } = await render(edr);

// Calculate reading time
function calculateReadingTime(content: string, wordsPerMinute = 200): number {
  const words = content.split(/\s+/).filter(Boolean).length;
  const minutes = Math.ceil(words / wordsPerMinute);
  return Math.max(1, minutes);
}

// Estimate reading time (in a real app, you'd pass the actual content)
const readingTime = calculateReadingTime(edr.body || '');

// Format date
const formattedDate = new Date(edr.data.date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<DefaultLayout title={edr.data.title} description={edr.data.description}>
  <div class="container overflow-hidden">
    <div class="">
      <div class="border-x border-[#30e2a3]">
        <div class="bordered-div-padding mx-auto max-w-3xl">
          <a
            href="/edrs"
            class="text-secondary hover:text-secondary/90 group inline-flex items-center text-sm font-medium md:text-base"
          >
            <ArrowLeft
              className="mr-2 h-5 w-5 transition-transform group-hover:-translate-x-0.5"
            />
            Back to EDRs
          </a>
          <div
            class="text-muted-foreground float-right flex items-center text-sm font-medium"
          >
            <ClockFading className="mr-2 h-5 w-5" />
            {readingTime} min{readingTime !== 1 ? 's' : ''} read
          </div>
        </div>
      </div>

      <article>
        <!-- Post header -->
        <div class="border-x border-b border-[#30d0b1]">
          <header
            class="bordered-div-padding mx-auto max-w-3xl space-y-6 !pt-0 md:space-y-8 lg:space-y-10"
          >
            <h1
              class="font-weight-display text-2xl leading-snug tracking-tighter md:text-3xl lg:text-5xl"
            >
              {edr.id}
            </h1>
            <div class="flex items-center justify-between">
              <div
                class="text-secondary float-left text-sm font-medium md:text-base"
              >
                {edr.data.type}
              </div>
              <div class="text-muted-foreground left text-sm md:text-base">
                {edr.data.status}
              </div>
            </div>
          </header>
        </div>

        <div class="border-x border-[#30bcc2]">
          <div class="bordered-div-padding mx-auto max-w-3xl">
            <!-- Post content with custom MDX styling -->
            <div
              class="mdx-content prose prose-lg max-w-none [&>h2:first-of-type]:mt-0"
            >
              <Content />
            </div>
          </div>
        </div>
      </article>
    </div>
    <div class="hidden border-x border-b border-[#31a2d8] p-10 md:block"></div>
  </div>
</DefaultLayout>

